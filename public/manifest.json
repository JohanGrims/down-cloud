{
  "manifest_version": 3,
  "name": "Down-Cloud",
  "author": "johangrims",
  "version": "1.0",
  "description": "Download files and folders from the HPI Schulcloud.",
  "permissions": ["scripting", "storage", "activeTab", "tabs", "windows"],
  "host_permissions": ["https://brandenburg.cloud/files/teams/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://brandenburg.cloud/files/teams/*",
        "https://brandenburg.cloud/files/courses/*",
        "https://brandenburg.cloud/files/my/*",
        "https://brandenburg.cloud/files/shared/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "options_page": "option.html",
  "web_accessible_resources": [
    {
      "resources": ["logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
